<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_profile">

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.arturo.movies.ui.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_movies"
        android:name="com.arturo.movies.ui.MovieListFragment"
        android:label="@string/title_movies"
        tools:layout="@layout/fragment_movie_list" />

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.arturo.movies.ui.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/navigation_upload"
        android:name="com.arturo.movies.ui.UploadFragment"
        android:label="@string/title_upload"
        tools:layout="@layout/fragment_upload" />
</navigation>